

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Product {
  id          String   @id @default(cuid())
  name        String                 // Tuotenimi
  ingredients String?                // Ainesosat (comma- or newline-separated)
  allergens   String?                // Allergeenit (comma-separated)
  size        String?
  price       String?
  EAN         String?                
  photoUrl    String?                // PhotoURL

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
}