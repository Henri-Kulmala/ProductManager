datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price  Decimal @db.Decimal(10,2)


  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt])
  @@index([name])
}
