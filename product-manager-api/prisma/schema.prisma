

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Product {
  id            String   @id @default(cuid())
  name          String                
  ingredients   String?               
  allergens     String?               
  size          String?
  price         String?
  EAN           String?                
  photoUrl      String?        
  producer      String?
  producedIn    String?
  ECodes        String?
  preservation  String?       

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt



  @@index([name])
}